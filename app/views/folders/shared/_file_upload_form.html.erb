<%= form_with(model: [folder, FileEntry.new], local: true, class: "flex") do |f| %>
  <%= f.file_field :file,
               class: "hidden",
               id: "file-upload",
               data: {
                 action: "change->form#submit",
               } %>

  <%= f.submit "Upload File",
           class:
             "bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 text-sm font-medium",
           onclick:
             "document.getElementById('file-upload').click(); return false;" %>
<% end %>
