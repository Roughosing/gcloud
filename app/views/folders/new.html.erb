<%= render "shared/modal", modal_width: "w-full max-w-lg" do %>
  <div class="space-y-6">
    <div>
      <h2 class="mt-2 text-center text-3xl font-extrabold text-gray-900">
        Create new folder
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        Add a new folder to organize your files
      </p>
    </div>

    <%= form_with(model: @folder, local: true, class: "mt-8 space-y-6") do |f| %>
      <%= f.hidden_field :parent_id, value: @parent_folder.id %>

      <div class="rounded-md">
        <div class="relative">
          <%= f.text_field :name,
                       placeholder: "Folder name",
                       class:
                         "appearance-none rounded-lg relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm",
                       autofocus: true %>
        </div>
      </div>

      <div class="flex items-center justify-end space-x-4">
        <%= link_to "Cancel",
        folder_path(@parent_folder),
        class: "text-sm font-medium text-gray-600 hover:text-gray-500" %>

        <%= f.submit "Create Folder",
                 class:
                   "group relative flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>
<% end %>
