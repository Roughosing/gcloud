<div class="rounded-lg bg-white p-4 shadow-sm transition-shadow hover:shadow-md group relative" id="folder-<%= folder.id %>">
  <%= link_to folder_path(folder), class: "block" do %>
    <div class="flex items-center space-x-3">
      <%= heroicon(
        "folder",
        variant: :solid,
        options: {
          class: "w-8 h-8 text-yellow-500",
        },
      ) %>
      <span class="text-sm font-medium text-gray-900"><%= folder.name %></span>
    </div>
  <% end %>

  <% unless folder == current_user.root_folder %>
    <%= button_to folder_path(folder), 
        method: :delete,
        class: "absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition-opacity",
        form: { data: { turbo_confirm: "Are you sure you want to delete this folder and all its contents?" } } do %>
      <%= heroicon("trash", variant: :outline, options: { class: "w-5 h-5 text-red-500" }) %>
    <% end %>
  <% end %>

  
</div>
