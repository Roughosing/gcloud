<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8 bg-white p-8 rounded-lg shadow-lg">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Create your account
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        Join our cloud storage platform
      </p>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mt-8 space-y-6" }) do |f| %>
      <%= f.error_notification %>

      <div class="rounded-md space-y-4">
        <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: {
                  class:
                    "appearance-none rounded-lg relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-emerald-500 focus:border-emerald-500 focus:z-10 sm:text-sm",
                  autocomplete: "email",
                },
                wrapper_html: {
                  class: "rounded-md",
                },
                label_html: {
                  class: "sr-only",
                },
                placeholder: "Email address" %>

        <%= f.input :password,
                required: true,
                hint:
                  (
                    if @minimum_password_length
                      "#{@minimum_password_length} characters minimum"
                    end
                  ),
                input_html: {
                  class:
                    "appearance-none rounded-lg relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-emerald-500 focus:border-emerald-500 focus:z-10 sm:text-sm",
                  autocomplete: "new-password",
                },
                wrapper_html: {
                  class: "rounded-md",
                },
                label_html: {
                  class: "sr-only",
                },
                placeholder: "Password" %>

        <%= f.input :password_confirmation,
                required: true,
                input_html: {
                  class:
                    "appearance-none rounded-lg relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-emerald-500 focus:border-emerald-500 focus:z-10 sm:text-sm",
                  autocomplete: "new-password",
                },
                wrapper_html: {
                  class: "rounded-md",
                },
                label_html: {
                  class: "sr-only",
                },
                placeholder: "Confirm password" %>

        <% if @minimum_password_length %>
          <p class="text-sm text-gray-500">
            Password must be at least
            <%= @minimum_password_length %>
            characters
          </p>
        <% end %>
      </div>

      <div>
        <%= f.button :submit,
                 "Sign up",
                 class:
                   "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-emerald-600 hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-emerald-500" %>
      </div>
    <% end %>

    <div class="mt-6">
      <div class="relative">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-gray-300"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-2 bg-white text-gray-500">
            Already have an account?
          </span>
        </div>
      </div>

      <div class="mt-6 text-center">
        <%= link_to "Sign in",
        new_session_path(resource_name),
        class: "font-medium text-emerald-600 hover:text-emerald-500" %>
      </div>
    </div>
  </div>
</div>
